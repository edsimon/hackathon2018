<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <shape xmlns:android="http://schemas.android.com/apk/res/android"
        android:shape="rectangle" >

        <!-- View background color -->
        <solid
            android:color="@color/background_color" >
        </solid>

        <!-- View border color and width -->
        <stroke
            android:width="1dp"
            android:color="@color/border_color" >
        </stroke>

        <!-- The radius makes the corners rounded -->
        <corners
            android:radius="2dp"   >
        </corners>

    </shape>

    <Button
        android:id="@+id/buttonLockIn"
        style="@android:style/Widget.Holo.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lock In"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="435dp" />

    <TextView
        android:id="@+id/motherLangWord"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginBottom="248dp"
        android:background="@drawable/my_border"
        android:textAppearance="@android:style/TextAppearance.StatusBar.Title"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/btnId0"
        tools:layout_editor_absoluteX="16dp" />

    <Button
        android:id="@+id/btnId0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="26dp"
        tools:layout_editor_absoluteY="328dp" />

    <Button
        android:id="@+id/btnId2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="253dp"
        tools:layout_editor_absoluteY="328dp" />

    <Button
        android:id="@+id/btnId1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="141dp"
        tools:layout_editor_absoluteY="328dp" />

</android.support.constraint.ConstraintLayout>